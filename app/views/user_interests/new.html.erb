<!-- Head -->

<% content_for :meta_title, "#{DEFAULT_META["meta_product_name"]} | #{@user.name} Interests " %>

<!-- Body -->


<%= simple_form_for(@user_interest) do |f| %>

<div class ="wrapper-interests-edit">
 <div class="form-inputs">
    <%= f.input :interest_id, as: :select, collection: @interests.order(:name) %>
    <%= f.input :score %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button-primary" %>
  </div>
<% end %>
</div>


<!-- Head -->
<% content_for :meta_title, "#{DEFAULT_META["meta_product_name"]} | Chat with #{@chatroom.name} " %>

<!-- Body -->

<p id="chatroom-upper-headline">Your chat with</p>
<h1 id="chatroom-headline"><%= @chatroom.name %></h1>


  <div>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>

  <%= simple_form_for [@chatroom, @message] do |f| %>
    <%= f.input :content, label: false, placeholder: "Write your message and press enter to send it"%>
    <%= f.submit "Send message", class: "btn btn-info", id:"send-button" %>
  <% end %>
</div>

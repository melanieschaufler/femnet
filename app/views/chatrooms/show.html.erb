<h1>Your chat with: <%= @chatroom.name %></h1>


  <div>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>

  <%= simple_form_for [@chatroom, @message] do |f| %>
    <%= f.input :content, label: false, placeholder: "Write your message and press enter to send it" %>
    <%= f.submit "Send message", class: "btn btn-info"  %>
  <% end %>
  <br>
  <br>
  <%= link_to "Your Dashboard", dashboard_index_path, class: "btn btn-info" %>
</div>

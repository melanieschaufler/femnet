<% professions = ["Brand & Public Relations",
                  "Consulting",
                  "Data Science & Analytics",
                  "Entrepreneurship",
                  "Finance, Accounting & Controlling",
                  "Freelancing",
                  "Human Ressources & Recruiting",
                  "Infrastructures & Security",
                  "Leadership & Management",
                  "Marketing & Growth",
                  "Product Management",
                  "Sales",
                  "Software Engineering",
                  "Strategy & Business Development",
                  "Sustainability",
                  "UX, Design & User Research",
                  "Web Development"] %>

<div class="wrapper-all">
<div class="search-wrapper">

<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    id: "searchfield",
    placeholder: "Search for name or city"
  %>

  <ul class="filter-professions">
  <p><strong>Profession</strong></p>
  <% professions.each do |profession| %>
      <li>
        <%= check_box_tag 'professions[]', profession -%>
        <%= profession -%>
      </li>
  <% end %>
  </ul>
  <ul class="filter-interests">
  <p><strong>Interests</strong></p>
  <% @interests.each do |interest| %>
      <li>
        <%= check_box_tag 'interests[]', interest.id -%>
        <%= interest.name -%>
      </li>
  <% end %>
  </ul>
  <%= submit_tag "Search", class: "button-primary", id: "search-btn"%>
<% end %>
</div>


<p id="search-results"><%= @users.count %> result(s) found</p>

<a class="switch-button" onclick="getElementById('card-wrapper').style.display = 'none'; getElementById('map').style.display = 'block';"><i class="fa fa-map"></i></a>
<a class="switch-button" onclick="getElementById('card-wrapper').style.display = ''; getElementById('map').style.display = 'none';"><i class="fa fa-list"></i></a>

<div class="all-cards" id="card-wrapper">

  <% @users.each do |user| %>
    <div class="card">
       <% if user.photo.present? %>
          <%= cl_image_tag user.photo.key, id: "profile-photo"%>
       <% else %>
          <%= image_tag "businesswoman.png", id: "profile-photo"%>
       <% end %>
       <div class="information">
          <p><strong><%= user.city %></strong></br></p>
          <h3><%= user.name %></h3>
          <p><strong><%= user.profession %></strong></br></p>
       <div class="interest-information">
          <% if user.user_interests.present? %>
            <% user.user_interests.each do |interest| %>
              <div id="name-interest">
                <%= interest.interest.name %></br>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="read-more-button">
       <%= link_to "Read More", user_path(user), class: "button-primary" %>
      </div>
    </div>
  <% end %>
</div>
</div>

<div class="map" id="map"
     style="height: 1400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
